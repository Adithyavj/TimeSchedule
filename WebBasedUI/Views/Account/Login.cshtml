@using WebBasedUI.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}
<html>
    <head>
        <link href="~/Content/login.css" rel="stylesheet" type="text/css" />
    </head>
    <body>
        <div class="card">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <h2 class="title"> Log in</h2>
                <p class="subtitle">Don't have an account? <a>@Html.ActionLink(" sign Up", "Register")</a></p>
                <div class="social-login">
                    <button class="google-btn">
                        <img alt="Google" src="data:image/svg+xml;base64," />
                        <p class="btn-text">Sign in with Google</p>
                    </button>
                </div>

                <p class="or"><span>or</span></p>
                <div class="email-login">
                    <label for="email"> <b>Email</b></label>
                    @Html.TextBoxFor(m => m.Email, new
                    {
                        @placeholder = "Enter Email",
                        @type = "text"
                    })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                    <label for="psw"><b>Password</b></label>
                    @Html.PasswordFor(m => m.Password, new
                    {
                           @placeholder = "Enter Password"
                    })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                
                <button type="submit" value="Login" class="cta-btn">Log In</button>
                <a class="forget-pass" href="#">Forgot password?</a>
            }
        </div>
    </body>
</html>